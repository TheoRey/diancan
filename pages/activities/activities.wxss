/* pages/activities/activities.wxss */
page{
    background: #fff;
}

.activity-container{
    position: relative;
    width: auto;
    height: 450rpx;
    margin: 20rpx 15rpx;
}

.activity-img{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}

.activity-text{
    position: absolute;
    width: auto;
    padding: 50rpx;
    top: 260rpx;
    color: #fff;
    font-size: 42rpx;
    line-height: 1.5;
    z-index: 1;
    text-align: center;
}