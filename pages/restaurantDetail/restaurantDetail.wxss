/* pages/restaurantDetail/restaurantDetail.wxss */
page{
    height: 100%;
}

.restaurant-intro{
    display: flex;
    height: 35%;
    background: #8B0A50;
}

.avatar-img{
    width: 100%;
    height: 100%;
}

.name{
    position: absolute;
    top: 25%;
    padding: 25rpx;
    font-size: 40rpx;
    color: #fff;
}

.cusine-container{
    display: flex;
    color: #000;
    background: #fff;
    border-bottom: 1px solid #F2F2F2;
}

.cusine-pic{
    width: 180rpx;
    height: 180rpx;
    padding: 15rpx;
}

.cusine-name-price-container{
    display: flex;
    flex-direction: column;
}

.cusine-name{
    padding: 8rpx;
    font-size: 36rpx;
}

.cusine-price{
    color: #f10214;
}