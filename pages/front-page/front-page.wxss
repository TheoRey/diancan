/* pages/front-page/front-page.wxss */
.search-container{
    display: flex;
    justify-content: center;
    padding: 8rpx;
    background: #8B0A50;
}

.search{
    height: 60rpx;
    width: 98%;
    background: #F6F6F6;
    border-radius: 12px;
    text-align: center;
}

.icon-container{
    display: flex;
    width: auto;
    padding: 35rpx;
    background: #8B0A50;
    justify-content: space-around;
}

.icon-text-container{
    display: flex;
    flex-direction: column;
}

.icons{
    width: 120rpx;
    height: 120rpx;
}

.icon-text{
    padding: 25rpx;
    font-size: 35rpx;
    color: #fff;
}

.arounds{
    height: auto;
}

.arounds-intro{
    background: #fff;
    padding: 15rpx;
    border-bottom: 1px solid #F2F2F2;
    font-size: 32rpx;
}
