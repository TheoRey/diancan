page{
    background: #EDEDED;
}

.restaurant-container{
    display: block;
    width: auto;
    margin-bottom: 16rpx;
    background: #fff;
    padding: 10rpx;
}

.restaurant-img-name-container{
    display: flex;
    align-items: center;
    flex-direction: column;
    text-align: center;
}

.restaurant-img{
    display: block;
    width: 180rpx;
    height: 180rpx;
    padding: 15rpx;
}

.restaurant-name{
    display: block;
    padding: 5rpx;
    font-size: 35rpx;
    font-weight: bold;
    color: #8B0A50;
}

.score-distance-container{
    display: flex;
    justify-content: space-between;
    margin: 0 25rpx;
    padding: 15rpx 0;
    border-bottom: 1px solid #F2F2F2;
    font-size: 35rpx;
}

.restaurant-score{
    color: #f10214;
}

.restaurant-distance{
    color: #BABABA;
}

.restaurant-genre{
    display: flex;
    justify-content: center;
    padding: 10rpx 50rpx;
    font-size: 32rpx;
    color: #8C8C8C;
}